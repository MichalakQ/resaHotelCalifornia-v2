<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/semantic-ui/semantic.min.css">
    <link rel="icon" href="data:,">
    <title>
        Création de réservation
    </title>
</head>

<body>
    <div class="ui container" style="margin-top: 2rem;">
        <h1>Création de réservation</h1>

        <!-- Formulaire pour sélectionner le client et la chambre -->
        <form class="ui form" method="POST" action="/reservations/">

            <div class="field">
                <label>Client</label>
                <select name="client_id" class="ui dropdown" required>
                    <option value="">-- Sélectionner un client --</option>
                    <% clients.forEach(client => { %>
                        <option value="<%= client.id %>">
                            <%= client.nom %>
                        </option>
                    <% }) %>
                </select>
            </div>
            
            <div class="field">
                <label>Chambre</label>
                <select name="chambre_id" class="ui dropdown" required>
                    <option value="">-- Sélectionner une chambre --</option>
                    <% chambres.forEach(chambre => { %>
                        <option value="<%= chambre.id %>">
                            Chambre <%= chambre.numero %> (capacité <%= chambre.capacite %>)
                        </option>
                    <% }) %>
                </select>
            </div>
            

            <div class="field">
                <label>Date d'arrivée du client</label>
                <input type="date" name="date_arrivee" placeholder="12/12/12" required>
            </div>

            <div class="field">
                <label>Date de départ du client</label>
                <input type="date" name="date_depart" placeholder="12/12/12" required>
            </div>

            <button type="submit" class="ui positive button">Créer</button>

            <a href="/" class="ui button">Annuler</a>
        </form>
    </div>
</body>

</html>